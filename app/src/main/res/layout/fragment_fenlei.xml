<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fenlei_img_erweima"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/sao_kind" />
        <com.example.mvp_jingdong.custom.MySearchView
            android:id="@+id/fenlei_mySearchView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></com.example.mvp_jingdong.custom.MySearchView>

        <TextView
            android:id="@+id/fenlei_text_sousuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="搜索" />

        <ImageView
            android:id="@+id/fenlei_img_xiaoxi"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/order_msg" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--android:scrollbars="none"    去掉  listview  有滚动-->
        <ListView
            android:id="@+id/fenlei_zuo_listview"
            android:scrollbars="none"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"></ListView>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cdcdcd" />

        <ListView
            android:id="@+id/fenlei_youbian_zhanshi"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent">



        </ListView>
    </LinearLayout>
</LinearLayout>